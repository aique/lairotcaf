{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@factorial/bicycles-web-lib": [
        "libs/bicycles-web-lib/src/index.ts"
      ],
      "@factorial/bicycles-web/feature-configurator": [
        "libs/bicycles-web/feature-configurator/src/index.ts"
      ],
      "@factorial/bicycles-web/feature-store": [
        "libs/bicycles-web/feature-store/src/index.ts"
      ],
      "@factorial/bicycles-web/ui-layout": [
        "libs/bicycles-web/ui-layout/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
